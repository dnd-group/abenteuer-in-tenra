<?xml version="1.0" encoding="utf-8" ?>
<elements>
    <element name="Custom Background" type="Background" source="Abenteuer in Tenra" id="ID_DNDG_AIT_BACKGROUND_CUSTOM_BACKGROUND">
        <description>
            <p>Create your own custom background</p>
            <p>
                <b>Skill Proficiencies: </b>Choose two Skills. Your character gains Proficiency in them.<br/>
                <b>Tool Proficiencies: </b>Choose one tool. Your character gains Tool Proficiency* with it.<br/>
            </p>
        </description>
        <setters>
            <set name="short">Custom</set>
        </setters>
        <rules>
            <select type="Proficiency" name="Skill Proficiency (Custom Background)" supports="ID_PROFICIENCY_SKILL_ACROBATICS|ID_PROFICIENCY_SKILL_ANIMALHANDLING|ID_PROFICIENCY_SKILL_ARCANA|ID_PROFICIENCY_SKILL_ATHLETICS|ID_PROFICIENCY_SKILL_DECEPTION|ID_PROFICIENCY_SKILL_HISTORY|ID_PROFICIENCY_SKILL_INSIGHT|ID_PROFICIENCY_SKILL_INTIMIDATION|ID_PROFICIENCY_SKILL_INVESTIGATION|ID_PROFICIENCY_SKILL_MEDICINE|ID_PROFICIENCY_SKILL_NATURE|ID_PROFICIENCY_SKILL_PERCEPTION|ID_PROFICIENCY_SKILL_PERFORMANCE|ID_PROFICIENCY_SKILL_PERSUASION|ID_PROFICIENCY_SKILL_RELIGION|ID_PROFICIENCY_SKILL_SLEIGHTOFHAND|ID_PROFICIENCY_SKILL_STEALTH|ID_PROFICIENCY_SKILL_SURVIVAL" number="2" />
            <select type="Language" name="Language (Custom Background)" supports="Standard||Exotic" />
            <select type="Proficiency" name="Tool Proficiency (Custom Background)" supports="Artisan tools"/>
            <select type="Proficiency" name="Mustical Instrument or Gaming Set (Custom Background)" supports="Musical Instrument||Gaming Set" />
        </rules>
    </element>  
</elements>